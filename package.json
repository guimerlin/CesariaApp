{
  "homepage": ".",
  "name": "cesaria-app",
  "private": true,
  "version": "1.0.0",
  "main": "electron-main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "vite --host",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "firebase": "^12.0.0",
    "node-firebird": "^1.1.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^37.2.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "vite": "^7.0.4"
  },
  "build": {
    "appId": "com.cesaria.app",
    "productName": "Cesaria App",
    "directories": {
      "output": "release"
    },
    "asar": true,
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/cesaria.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "electron-preload.js",
      "assets/**/*"
    ]
  }
}
