{
  "homepage": ".",
  "name": "cesaria-app",
  "private": true,
  "version": "1.0.3",
  "main": "electron-main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "vite --host",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder",
    "publish": "npm run build && electron-builder --publish always"
  },
  "author": "LGBDS",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "bootstrap-icons": "^1.13.1",
    "class-variance-authority": "^0.7.1",
    "electron-log": "^5.4.2",
    "electron-updater": "^6.6.2",
    "firebase": "^12.0.0",
    "lucide-react": "^0.525.0",
    "node-firebird": "^1.1.9",
    "radix-ui": "^1.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tone": "^15.1.22"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^37.2.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "vite": "^7.0.4"
  },
  "build": {
    "appId": "com.cesaria.app",
    "productName": "Cesaria App",
    "directories": {
      "output": "release"
    },
    "asar": true,
    "extraResources": [
      {
        "from": "./assets",
        "to": "assets"
      },
      {
        "from": "./config.json",
        "to": "config.json"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./assets/cesaria.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "electron-preload.js",
      "assets/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "guimerlin",
      "repo": "cesariaapp",
      "private": false,
      "token": "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"
    }
  }
}
